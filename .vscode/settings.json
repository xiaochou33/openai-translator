{
  "editor.tabSize": 2,

  // disable default validator
  "css.validate": false,
  "scss.validate": false,

  // デフォルトのフォーマットの設定をOFFに
  // https://tech-1natsu.hatenablog.com/entry/2018/11/10/231855
  "editor.formatOnSave": true,

  // フォーマッターの指定
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // 言語別に設定
  // https://qiita.com/mysticatea/items/3f306470e8262e50bb70
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": true
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": true
    }
  },
  "[css]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  }
}
